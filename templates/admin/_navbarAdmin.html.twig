<header>
	<section class="navlg d-lg-flex navbar-light">
		<div class="wrapper">
			<div class="sidebar">
				<a class="navbar-brand" href="{{ path('landing_home') }}"><img src="{{ asset('build/images/Logos/LogoLJMBWhite.png') }}" alt="le juriste moderne logo"></a>
				<ul>
					<li class="{% if page == 'structure_index' or page == 'structure_show' or page == 'structure_edit'
						or page == 'contact_edit' or page == 'address_index' or page == 'address_edit' or page == 'address_new'
						or page == 'executive_index' or page == 'category_index' or page == 'category_edit' or page == 'category_new'
						or page == 'associate_index' or page == 'capital_show' or page == 'college_index' or page == 'college_edit'
						or page == 'college_new'%} navSelect {% endif %}">
						<a href="{{ path('structure_index', {'id': app.user.structure.id}) }}">Structure</a>
					</li>
					<li class="{% if page == 'members_index' or page == 'members_editLegal' or page == 'members_editNatural' or page == 'members_showNatural' or page == 'members_showLegal' %} navSelect {% endif %}">
						<a href="{{ path('members_index') }}">Membres</a>
					</li>
					<li class="{% if page == 'meeting_index'%} navSelect {% endif %}">
						<a href="{{ path('meeting_index') }}">Réunions</a>
					</li>
					<li class="{% if page == 'document_index'%} navSelect {% endif %}">
						<a href="{{ path('document_index', {'id': app.user.structure.id}) }}">Documents</a>
					</li>
					{% if is_granted('ROLE_ADMIN') %}
						<li class="{% if page == 'user_index' or page == 'user_show' or page == 'user_edit' or page == 'user_new'%} navSelect {% endif %}">
							<a href="{{ path('user_index') }}">Utilisateurs</a>
						</li>
					{% elseif is_granted('ROLE_USER') %}
						<li class="{% if page == 'user_show'%} navSelect {% endif %}">
							<a href="{{ path('user_show', {'id': app.user.id}) }}">Mon Compte</a>
						</li>
					{% endif %}
					{% if is_granted('ROLE_SUPERADMIN') %}
						<li>
							<a href="{{ path('superadmin')}}">SuperAdmin</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</section>
	<section class="navlg navbar-light d-lg-flex justify-content-end">
		<div class="header d-flex flex-row align-items-end justify-content-around">
			<div class="d-flex align-items-end justify-content-start">
				{% if app.user %}
					<p class="text-light m-0 ms-4 pb-1 ps-1">{{ app.user.firstname }}
						{{ app.user.lastname }}</p>
					<a href="{{ path('app_logout') }}"><span class="material-icons mx-3" id="logout">logout</span></a>
				{% else %}
					<a class="pt-2" style="height:60px" href="{{ path('app_login') }}"><span class="material-icons" id="notif">account_circle</span></a>
				{% endif %}
			</div>
		</div>
	</section>


	<section class="navxs">
		<nav class="navbar navbar-expand-lg sticky-top">
			<div class="ms-3">
				<a class="navbar-brand" href="{{ path('landing_home') }}"><img src="{{ asset('build/images/Logos/LogoLJMBWhite.png') }}" width="150px" alt="le juriste moderne logo"></a>
			</div>
			<div class="d-lg-none d-flex justify-content-center align-items-end">
				{% if app.user %}
					<a class="d-flex align-items-end" href="{{ path('app_logout') }}"><span class="material-icons pt-2" id="logout">logout</span></a>
				{% else %}
					<a class="pt-2" style="height:60px" href="{{ path('app_login') }}"><span class="material-icons" id="notif">account_circle</span></a>
				{% endif %}
			</div>
			<div class="d-md-flex justify-content-center align-items-end me-4">
				<button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="material-icons pt-1 menu">menu</span>
				</button>
			</div>
			<div class="navbar-collapse collapse" id="navbarSupportedContent">
				<div class="container-fluid">
					<ul class="navbar-nav ms-3 me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link {% if page == 'structure_index' or page == 'structure_show' or page == 'structure_edit' or page == 'contact_edit'
								or page == 'address_index' or page == 'address_edit' or page == 'address_new' or page == 'executive_index'
								or page == 'category_index' or page == 'category_edit' or page == 'category_new'
								or page == 'associate_index' or page == 'capital_show' or page == 'college_index' or page == 'college_edit'
								or page == 'college_new'%} {% else %}item_not_select{% endif %}" href="{{ path('structure_index', {'id': app.user.structure.id}) }}">Structure</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if page == 'members_index' or page == 'members_editLegal' or page == 'members_editNatural'
							or page == 'naturalPerson_show' or page == 'legalPerson_show'%} {% else %}item_not_select{% endif %}" href="{{ path('members_index') }}">Membres</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if page == 'meeting_index'%}item_not_select{% endif %}" href="{{ path('meeting_index') }}">Réunions</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if page == 'document_index'%} {% else %}item_not_select{% endif %}" href="{{ path('document_index', {'id': app.user.structure.id}) }}">Documents</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link {% if page == 'user_index' or page == 'user_show' or page == 'user_edit' %} {% else %}item_not_select{% endif %}" href="{{ path('user_index') }}">Utilisateurs</a>
							</li>
						{% elseif is_granted('ROLE_USER') %}
							<li class="nav-link {% if page == 'user_show'%} {% else %}item_not_select{% endif %}">
								<a href="{{ path('user_show', {'id': app.user.id}) }}">Mon Compte</a>
							</li>
						{% endif %}
						{% if is_granted('ROLE_SUPERADMIN') %}
							<li class="nav-item">
								<a class="nav-link item_not_select" href="{{ path('superadmin')}}">SuperAdmin</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
	</section>
	{% for category, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ category }} text-center mb-0">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}
</header>